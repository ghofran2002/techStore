{% extends 'base.html.twig' %}

{% block title %}Tous les produits{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Liste des produits</h1>
    <div class="container">
        <div class="row">
            {% for product in products %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="{{ product.image }}" class="card-img-top img-fluid" alt="{{ product.name }}" style="height: 400px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <a href="{{ path('product_show', {id: product.id}) }}" class="text-decoration-none">{{ product.name }}</a>
                            </h5>
                            <p class="card-text">{{ product.price }} DT</p>
                            <a href="{{ path('product_show', {id: product.id}) }}" class="btn btn-primary mt-auto">Voir le produit</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Aucun produit disponible.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
